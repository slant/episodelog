<p>&laquo; <%= link_to "Back to Shows", shows_path %></p>

<div id="show_progress">
  <h3>Your Progress</h3>
  <ul>
    <li><hr /></li>
    <li class="season">
      <span class="season_number">Overall</span>
      <div class="progress">
        <div class="complete" style="width: <%= progress(@show) %>px;"></div>
        <span class="copy"><%= progress(@show) == 100 ? "completed" : "#{progress(@show)}% complete" %></span>
      </div>
    </li>
    <li><hr /></li>
    <% @show.seasons.each do |s| %>
    <li class="season">
      <span class="season_number">Season <%= s %></span>
      <div class="progress">
        <div class="complete" style="width: <%= progress(@show, s) %>px;"></div>
        <span class="copy"><%= progress(@show, s) == 100 ? "completed" : "#{progress(@show, s)}% complete" %></span>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<h2><%= @show.name %></h2>
<p id="notice"><%= notice %></p>

<%= link_to 'List all episodes', show_episodes_path(@show) %>
