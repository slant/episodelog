<% content_for :left_button do %>
  <% link_to('Shows', shows_path, :class => 'back') %>
<% end %>

<% content_for :nav_title do %>
  <div id="title">Dashboard</div>
<% end %>

<div id="dashboard">
  <div class="section">
    <h2>Favorite shows</h2>
    <%= render :partial => 'home/show', :collection => @shows, :as => :show, :locals => { :mode => 'dashboard' } %>
    <% if @show_count.size == 0 %>
    <%=raw "<p>You are not following any shows yet. #{link_to('Go add some', shows_path)}!</p>" %>
    <% elsif @shows.size == 0 and @show_count.size > 0 %>
    <%=raw "<p>You have not marked any shows that you're currently watching as favorites. #{link_to('Go add some', shows_path)}!</p>" %>
    <% end %>
    
  </div>

  <% if @watched_shows.any? %>
  <div class="section">
    <h2>Watched shows</h2>
    <%= render :partial => 'home/show', :collection => @watched_shows, :locals => { :mode => 'dashboard' } %>
  </div>
  <% end %>

  <% if @completed_shows.any? %>
  <div class="section">
    <h2>Completed shows</h2>
    <%= render :partial => 'home/show', :collection => @completed_shows, :locals => { :mode => 'dashboard' } %>
  </div>
  <% end %>
</div>
