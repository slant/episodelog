<% content_for :left_button do %>
  <% link_to('Shows', shows_path, :class => 'back') %>
<% end %>

<% content_for :nav_title do %>
  <div id="title">Dashboard</div>
<% end %>

<div id="dashboard">
  <h2>Your shows</h2>
  <%= render :partial => 'home/show', :collection => @shows, :locals => { :mode => 'dashboard' } %>
  <%=raw 'You are not following any shows yet. ' + link_to('Go add some', shows_path) + '!' if @shows.empty? %>
</div>