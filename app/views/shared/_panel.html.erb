    <%- if user_signed_in? -%>
      <div id="panel" class="user-details">
        <%= image_tag("http://www.gravatar.com/avatar.php?gravatar_id=#{Digest::MD5::hexdigest(current_user.email)}", :alt => 'Avatar', :class => 'avatar') %>
        <div id="controls">
          <%= current_user.email %><br />
          <%= link_to "preferences", edit_user_registration_path %> |
          <%= link_to 'logout', logout_path %>
        </div>
      </div>
    <%- else -%>
      <div id="panel" class="login">
<%= render :partial => 'shared/login' %>
      </div>
    <%- end -%>