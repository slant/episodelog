<div id="show_<%= show.id %>" class="show<%= (current_user.shows.include?(show) ? ' favorite' : '') if current_user %>">
  <div class="status">
    <%= current_user.shows.include?(show) ? link_to('remove', '', :class => 'remove') : link_to('favorite', '', :class => 'add') if current_user %>
  </div>
  <% link_to show_episodes_path(show), :class => 'details' do %>
    <h3><%= show.name %></h3>
    <p><%= pluralize show.seasons.size, 'season' %>, <%= pluralize(show.episodes.size, 'episode') %></p>
  <% end %>
</div>
