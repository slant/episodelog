      <tr>
        <td><%= check_box_tag 'episodes[]', value = episode.id, checked = episode.watched?(current_user), :dataurl => ajax_watched_episode_path(episode) %></td>
        <td><%= episode.episode_number %></td>
        <td><%= episode.season %></td>
        <td><%= link_to episode.name, episode_path(episode) %></td>
        <td><%= episode.air_date.strftime('%m/%d/%Y') %></td>
      </tr>